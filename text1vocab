<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Vocabulary in Context Quiz</title>
    <style>
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; line-height: 1.6; max-width: 600px; margin: 40px auto; padding: 20px; background-color: #eef2f3; }
        .card { background: white; padding: 30px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.1); }
        .hidden { display: none; }
        button { background: #2c3e50; color: white; border: none; padding: 12px 24px; border-radius: 6px; cursor: pointer; font-size: 16px; transition: 0.3s; }
        button:hover { background: #34495e; }
        .option { display: block; margin: 12px 0; padding: 10px; border: 1px solid #ddd; border-radius: 6px; cursor: pointer; transition: 0.2s; }
        .option:hover { background-color: #f9f9f9; border-color: #2c3e50; }
        #feedback { font-weight: bold; margin-top: 20px; font-size: 1.1em; }
    </style>
</head>
<body>

<div class="card">
    <div id="quiz-container">
        <h2 id="question-text"></h2>
        <div id="options-container"></div>
        <button id="submit-btn">Submit Answer</button>
        <p id="feedback"></p>
    </div>

    <div id="results-container" class="hidden">
        <h2>Vocabulary Results</h2>
        <p id="final-score" style="font-size: 1.5em; color: #2c3e50;"></p>
        <button onclick="location.reload()">Try Again</button>
    </div>
</div>

<script>
    const quizData = [
        {
            q: "In the text, the word 'evolved' most nearly means:",
            a: ["Developed gradually", "Suddenly stopped", "Stayed the same", "Declined in value"],
            correct: "Developed gradually"
        },
        {
            q: "The word 'persists' in the phrase 'this pattern persists today' means:",
            a: ["Continues to exist", "Vanishes quickly", "Begins anew", "Causes harm"],
            correct: "Continues to exist"
        },
        {
            q: "Based on the context, 'wealth consolidation' refers to:",
            a: ["The gathering of riches into a few hands", "The spending of money on education", "The loss of property during war", "The fair sharing of resources"],
            correct: "The gathering of riches into a few hands"
        },
        {
            q: "In the sentence, 'social mobility' refers to the ability to:",
            a: ["Change one's status in society", "Travel to different countries", "Communicate in English", "Vote in elections"],
            correct: "Change one's status in society"
        }
    ];

    let currentIdx = 0;
    let score = 0;

    function loadQuestion() {
        const question = quizData[currentIdx];
        document.getElementById('question-text').innerText = question.q;
        document.getElementById('feedback').innerText = "";
        
        const optionsDiv = document.getElementById('options-container');
        optionsDiv.innerHTML = "";

        // Shuffle choices
        const shuffledOptions = [...question.a].sort(() => Math.random() - 0.5);

        shuffledOptions.forEach(opt => {
            const label = document.createElement('label');
            label.className = 'option';
            label.innerHTML = `<input type="radio" name="quiz" value="${opt}"> ${opt}`;
            optionsDiv.appendChild(label);
        });
    }

    document.getElementById('submit-btn').onclick = () => {
        const selected = document.querySelector('input[name="quiz"]:checked');
        if (!selected) return alert("Please select an answer!");

        const feedback = document.getElementById('feedback');
        if (selected.value === quizData[currentIdx].correct) {
            feedback.innerText = "Correct.";
            feedback.style.color = "#27ae60";
            score++;
        } else {
            feedback.innerText = "Incorrect.";
            feedback.style.color = "#e74c3c";
        }

        document.getElementById('submit-btn').style.display = 'none';
        
        setTimeout(() => {
            currentIdx++;
            if (currentIdx < quizData.length) {
                document.getElementById('submit-btn').style.display = 'block';
                loadQuestion();
            } else {
                showResults();
            }
        }, 1200);
    };

    function showResults() {
        document.getElementById('quiz-container').classList.add('hidden');
        document.getElementById('results-container').classList.remove('hidden');
        document.getElementById('final-score').innerText = `Your Score: ${score}/${quizData.length}`;
    }

    loadQuestion();
</script>

</body>
</html>
